<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FastTalkerSkiaSharp.Pages.StoredIconPopup"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             xmlns:ctrl="clr-namespace:FastTalkerSkiaSharp.Controls;assembly=FastTalkerSkiaSharp"
             HasSystemPadding="{Binding IsSystemPadding}"
             Padding="{Binding Padding}">
    <StackLayout VerticalOptions="FillAndExpand" 
               HorizontalOptions="FillAndExpand" 
               Padding="5,5,5,5" 
               BackgroundColor="Black">

        <StackLayout x:Name="coreLayout"
                     BackgroundColor="White" 
                     VerticalOptions="FillAndExpand" 
                     HorizontalOptions="FillAndExpand">

            <ListView x:Name="dynamicListView"
                      SeparatorColor="Transparent"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      HasUnevenRows="true">

            </ListView>
        </StackLayout>
    </StackLayout>
</pages:PopupPage>
